{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"condition": {
			"type": "string",
			"description": "This MoLang expression has to evaluate to '1' (true) in order for the event to run"
		},
		"target": {
			"type": "string",
			"description": "Target to trigger the event on",
			"enum": ["self", "other", "target", "parent", "baby"]
		}
	},
	"allOf": [
		{
			"if": {
				"properties": {
					"target": {
						"const": "self"
					}
				}
			},
			"then": {
				"properties": {
					"event": {
						"$ref": "../../dynamic/block/currentContext/eventEnum.json",
						"description": "Identifier of the event to trigger"
					}
				}
			}
		},
		{
			"if": {
				"properties": {
					"target": {
						"enum": [
							"other", "target", "parent", "baby"
						]
					}
				}
			},
			"then": {
				"properties": {
					"event": {
						"$ref": "../../dynamic/entity/eventEnum.json",
						"description": "Identifier of the event to trigger"
					}
				}
			}
		}
	]
}
