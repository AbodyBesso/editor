{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"condition": {
			"type": "string",
			"description": "This MoLang expression has to evaluate to 'true' in order for the event to run"
		},
		"target": {
			"$ref": "../../general/filter/subject.json"
		}
	},
	"allOf": [
		{
			"if": {
				"properties": {
					"target": {
						"const": "self"
					}
				}
			},
			"then": {
				"properties": {
					"event": {
						"$ref": "../../dynamic/item/currentContext/eventEnum.json",
						"description": "Identifier of the event to trigger"
					}
				}
			}
		},
		{
			"if": {
				"properties": {
					"target": {
						"enum": [
							"other",
							"holder",
							"target",
							"baby",
							"parent"
						]
					}
				}
			},
			"then": {
				"properties": {
					"event": {
						"$ref": "../../dynamic/entity/eventEnum.json",
						"description": "Identifier of the event to trigger"
					}
				}
			}
		},
		{
			"if": {
				"properties": {
					"target": {
						"const": "block"
					}
				}
			},
			"then": {
				"properties": {
					"event": {
						"$ref": "../../dynamic/block/eventEnum.json",
						"description": "Identifier of the event to trigger"
					}
				}
			}
		}
	]
}
