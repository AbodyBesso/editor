{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Server Animation",
	"$id": "bridge.serverAnimation",
	"required": ["format_version"],
	"properties": {
		"format_version": { "enum": ["1.10.0"] },
		"animations": {
			"propertyNames": {
				"pattern": "^animation\\..+$"
			},
			"patternProperties": {
				"^animation\\..+$": {
					"properties": {
						"animation_length": { "type": "number" },
						"loop": {
							"enum": [true, false, "hold_on_last_frame"]
						},
						"timeline": {
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"type": "array",
									"items": {
										"anyOf": [
											{
												"$ref": "../function/dynamic/functionPathEnum.json"
											},
											{
												"$ref": "../entity/dynamic/prefixedEntityEventEnum.json"
											}
										]
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
