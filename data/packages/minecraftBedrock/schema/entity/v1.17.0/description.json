{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"aliases": {
			"type": "object",
			"patternProperties": {
				".*": {
					"anyOf": [
						{
							"$ref": "../dynamic/currentContext/propertyProperty.json"
						},
						{
							"type": "object",
							"patternProperties": {
								".*": {
									"anyOf": [
										{
											"type": "string"
										},
										{
											"type": "number"
										},
										{
											"type": "boolean"
										}
									]
								}
							}
						}
					]
				}
			}
		},
		"properties": {
			"type": "object",
			"patternProperties": {
				".*": {
					"type": "object",
					"properties": {
						"min": { "type": "number" },
						"max": { "type": "number" },
						"values": {
							"type": "array",
							"items": {
								"anyOf": [
									{
										"type": "string"
									},
									{
										"type": "number"
									},
									{
										"type": "boolean"
									}
								]
							}
						},
						"default": { "type": "number" },
						"client_sync": { "type": "boolean" }
					}
				}
			}
		}
	}
}
